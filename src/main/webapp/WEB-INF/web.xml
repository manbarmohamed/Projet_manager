<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <servlet>
        <servlet-name>ShowProjetServlet</servlet-name>
        <servlet-class>com.controllers.projet.ShowProjetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowProjetServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteProjetServlet</servlet-name>
        <servlet-class>com.controllers.projet.DeleteProjetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProjetServlet</servlet-name>
        <url-pattern>/del</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddProjetServlet</servlet-name>
        <servlet-class>com.controllers.projet.AddProjetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProjetServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editeProjetServlet</servlet-name>
        <servlet-class>com.controllers.projet.editeProjetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editeProjetServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
</web-app>